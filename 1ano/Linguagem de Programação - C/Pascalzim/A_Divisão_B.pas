Program A_Divisivel_B ;
var a,b,r:REAL;
Begin
writeln('Digite dois números');
readln(a,b);
IF  (a>0) AND (b>0) THEN
r:=(a/b);
writeln('O numero ' ,a:0:2, ' é divísivel pelo número ' ,b:0:2, ' e o resultado é ',r:0:2);
Begin
IF (a=0) OR (b=0) THEN
writeln('Nenhum número é divisivel por zero')
end
  
  
End.